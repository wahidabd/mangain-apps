<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".view.account.BugReportFragment">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="12dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="32dp"
            android:layout_height="32sp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Laporkan Bug Aplikasi"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="14dp">

        <EditText
            android:id="@+id/edt_report"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Tulis masalah yang kamu alami"
            android:textColorHint="@color/grey_placeholder"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="top|start"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:inputType="textMultiLine"
            android:background="@drawable/bg_round_soft_dark"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="12dp"
            android:text="Send"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/ripple_rectangle_blue_6dp"/>

    </LinearLayout>

</LinearLayout>